<div class= "header">
  <%= link_to "New Article", new_article_path, class: "link" %>
</div>

<div class = "container">
  <% @articles.each do |article| %>
    <div class="list">
    <h3 class="link"><%= link_to article.title, article_path(article), class: "link-titles" %></h3>
    <p><%= article.content %></p>
    </div>
  <% end %>
</div>
